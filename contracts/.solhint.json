{
    "extends": "solhint:recommended",
    "plugins": [],
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.0"
        ],
        "func-visibility": [
            "error",
            {
                "ignoreConstructors": true
            }
        ],
        "not-rely-on-time": "warn",
        "reason-string": [
            "warn",
            {
                "maxLength": 64
            }
        ],
        "max-line-length": [
            "warn",
            120
        ]
    }
}